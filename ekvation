@app.route('/calculate', methods=['POST'])
def calculate():
    ek = 20  # Startv√§rde
    question = int(request.form['y'])
    tion = 3 * question
    result_value = ek - tion

    explanation = f"""
        <p class='explanation'>
            Vi b√∂rjar med ekvationen: <br>
            <strong>20 - 3 * {question}</strong> <br><br>
            Steg 1: Multiplicera 3 med {question}: <br>
            <strong>3 * {question} = {tion}</strong> <br><br>
            Steg 2: Subtrahera detta fr√•n 20: <br>
            <strong>20 - {tion} = {result_value}</strong> <br><br>
            S√• svaret blir: <strong>{result_value}</strong>.
        </p>
    """

    return f'''
        <html>
        <head>
            <title>Resultat</title>
            <style>
                body {{
                    font-family: Arial, sans-serif;
                    background-color: #1e1e1e;
                    color: white;
                    text-align: center;
                    padding: 50px;
                }}
                .container {{
                    background: #333;
                    padding: 20px;
                    border-radius: 10px;
                    width: 50%;
                    margin: auto;
                    box-shadow: 0 0 10px rgba(255, 255, 255, 0.2);
                }}
                .result {{
                    font-size: 24px;
                    margin-top: 20px;
                }}
                .explanation {{
                    font-size: 18px;
                    color: #cccccc;
                    text-align: left;
                    margin-top: 20px;
                    padding: 15px;
                    border-radius: 10px;
                    background: #222;
                }}
                a {{
                    color: #00d1b2;
                    text-decoration: none;
                    font-size: 18px;
                    display: inline-block;
                    margin-top: 20px;
                }}
                a:hover {{
                    text-decoration: underline;
                }}

                /* üì± Responsive Design for Phones */
                @media (max-width: 768px) {{
                    .container {{
                        width: 90%;
                        padding: 30px;
                    }}
                    .result {{
                        font-size: 28px;
                    }}
                    .explanation {{
                        font-size: 20px;
                        padding: 20px;
                    }}
                    a {{
                        font-size: 22px;
                    }}
                }}
            </style>
        </head>
        <body>
            <div class="container">
                <h1>Resultat</h1>
                <p class="result">Y v√§rdet √§r <strong>{question}</strong></p>
                <p class="result">20 - 3 * {question} = <strong>{result_value}</strong></p>
                {explanation}
                <a href="/">‚¨Ö G√• tillbaka</a>
            </div>
        </body>
        </html>
    '''

if __name__ == "__main__":
    app.run(host="0.0.0.0", port=81)
